#!/usr/bin/env bash

NORMAL="\\033[0;39m"
RED="\\033[1;31m"
# Check input
if [[ "$#" -eq "0" ]]; then
  echo "No arguments supplied"
  printf "    ${RED}wsi type? svs, tif, or scn?${NORMAL}\n"
  exit 1
fi

ext="$1"
output='/data/output'

/app/src/get_grayscale_heatmaps/get_grayscale_heatmap.sh "$ext" "$output"

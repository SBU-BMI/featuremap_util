#!/usr/bin/env bash
# Pyradiomics to CSV to JSON

uuid=$(python -c 'import sys,uuid; sys.stdout.write(uuid.uuid4().hex)') || uuid=$(uuidgen)
mydir="/tmp/$uuid"
mkdir -p "$mydir"
input='/data/input'
# Step 1
python /app/src/pyrad_to_map.py "$input" "$mydir"
if [[ $? -eq 0 ]]
then
  # Step 2
  output='/data/output'
  python /app/src/csv_to_json.py "$mydir" "$output" "normalized range of values"
  if [[ $? -eq 0 ]]
  then
    rm -rf "$mydir"
  fi
fi

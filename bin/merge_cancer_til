#!/usr/bin/env bash

PROGNAME=$(basename "$0")

if [ "$#" -ne 2 ]; then
  echo ""
  echo "usage: "
  echo "    ./$PROGNAME exec_id wsi_type"
  echo ""
  echo "    wsi_type: can be svs, tif, scn, etc"
  exit 1
fi

ext="$1"

SECONDS=0

python /app/src/merge_cancer_til.py  "/data/input/cancer" "/data/input/til" "/data/output" "/data/wsi" "$ext"

ELAPSED="Elapsed: $(($SECONDS / 3600))hrs $(($SECONDS / 60 % 60))min $(($SECONDS % 60))sec"
echo "$ELAPSED"

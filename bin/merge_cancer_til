#!/usr/bin/env bash

NORMAL="\\033[0;39m"
RED="\\033[1;31m"
# Check input
if [[ "$#" -eq "0" ]]; then
  echo "No arguments supplied"
  printf "    ${RED}wsi type? svs, tif, or scn?${NORMAL}\n"
  exit 1
fi

output='/data/output'
slide='/data/wsi'
ext="$1"

SECONDS=0

python /app/src/merge_cancer_til/gen_cancer_tils_pathDB_combined_maps.py "$output" "$ext"

ELAPSED="Elapsed: $(($SECONDS / 3600))hrs $(($SECONDS / 60 % 60))min $(($SECONDS % 60))sec"
echo "$ELAPSED"
